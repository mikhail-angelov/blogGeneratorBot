{
  "name": "telegram-bot-glog-generator",
  "version": "1.0.0",
  "description": "telegram-bot-glog-generator",
  "main": "index.js",
  "scripts": {
    "test": "jest",
    "build": "ncc build api/index.ts -o dist",
    "start": "node dist/index.js",
    "dev": "tsc-watch --onSuccess \"node ./dist/index.js\" --onFailure \"echo Beep! Compilation Failed\""
  },
  "keywords": [
    "Telegram",
    "Bot",
    "site generator"
  ],
  "author": "Mikhail Angelov",
  "license": "ISC",
  "dependencies": {
    "@octokit/rest": "^18.0.12",
    "handlebars": "^4.0.6",
    "simple-get": "^4.0.1"
  },
  "devDependencies": {
    "@now/node": "^1.8.5",
    "@types/jest": "^26.0.19",
    "@vercel/ncc": "0.24.1",
    "jest": "^26.6.3",
    "ts-jest": "^26.4.4",
    "tsc-watch": "^4.2.9",
    "typescript": "^4.1.3"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "lib",
    "testRegex": ".spec.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  }
}
